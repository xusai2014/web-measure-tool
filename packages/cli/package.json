{
  "name": "@perfe/wml-cli",
  "version": "1.0.1",
  "description": "网页性能评估 CLI",
  "keywords": ["web","measure","performace","lighthouse"],
  "bin": {
    "wml": "lib/index.js"
  },
  "scripts": {
    "prepack": "npm run build",
    "build": "npx tsc",
    "dev": "npx nodemon src/index.ts"
  },
  "files": [
    "./lib/**/*",
    "package.json",
    "ReadMe.md"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.23",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500",
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "watch": [
      "./src"
    ],
    "ext": "ts"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chrome-launcher": "^0.15.1",
    "lighthouse": "^9.6.7",
    "seedrandom": "^3.0.5"
  }
}
